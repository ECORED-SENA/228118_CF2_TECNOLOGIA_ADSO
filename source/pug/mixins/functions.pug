mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-center

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-color-3 Tecnología en análisis  y desarrollo de software
                    h1#curso-titulo-tema.curso-titulo Ingeniería de los requisitos

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-2.mr-2 Especificación de requisitos
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-3.mr-2 Representaciones gráficas
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-4.mr-2 Validación de requisitos 


                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion El proceso de ingeniería de requisitos comprende un estudio de factibilidad, adquisición, análisis, especificación, validación y administración. La recolección de requisitos busca obtener información sobre el software a desarrollar: los procesos que debe realizar sobre los datos y la manera en que debe pedir a los usuarios los datos de entrada para presentar los resultados a través de la interfaz de usuario. Cuando se definen y documentan los requisitos es importante incluir los requisitos de los productos a desarrollar y del proyecto. 
          
                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.btn-light(href="main.html").mb-4
                            span Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
